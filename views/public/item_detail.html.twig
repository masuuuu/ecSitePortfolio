<!DOCTYPE html>
<html lang="ja">
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="{{constant('models\\Bootstrap::APP_URL')}}assets/css/style.css" rel="stylesheet">
  <link rel="stylesheet" href="{{constant('models\\Bootstrap::APP_URL')}}assets/slick/slick.css" type="text/css">
  <link rel="stylesheet" href="{{constant('models\\Bootstrap::APP_URL')}}assets/slick/slick-theme.css" type="text/css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="{{constant('models\\Bootstrap::APP_URL')}}assets/slick/slick.min.js"></script>
  <script src="{{constant('models\\Bootstrap::APP_URL')}}assets/js/shopping.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>商品詳細</title>
</head>
  <body>
    {% include 'header.html.twig' %}
    <div class="contents">
      <div class="contents_inner">
        <div class="main-contents">
          <div class="item-deteil">
            <div class="item-deteil-image">
              <div class="slider-container">
                <div id="slider">
                  {% for val in imageArr %}
                    {% if val.image | length > 0 %}
                    <div><img src="{{constant('models\\Bootstrap::APP_URL')}}assets/images/{{val.image}}" alt="{{dataArr.item_name}}"></div>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            </div>
            <div class="item-detail-text">
              <div>
                <dl>
                  <dt>商品名</dt><dd>{{dataArr.item_name}}</dd>
                  <dt>商品説明</dt><dd>{{dataArr.detail}}</dd>
                  <dt>価格</dt><dd>&yen;{{dataArr.unit_price|number_format(0, '.', ',')}}</dd>
                </dl>
              </div>
              <div class="cart">
              {% for sku in skuArr %}
              <div class="cart_in">
                  <form method="post" action="cart.php">
                    <ul>
                      <li><p>{{sku.color}}</p></li>
                      <li><p>{{sku.size}}</p></li>
                      <li><input type="submit" name="cart_in" value="カートへ入れる"></li>
                    </ul>
                    <input type="hidden" name="item[item_id]" value="{{sku.item_id}}">
                    <input type="hidden" name="item[sku_code]" value="{{sku.sku_code}}">
                    <input type="hidden" name="item[color]" value="{{sku.color}}">
                    <input type="hidden" name="item[size]" value="{{sku.size}}">
                  </form>
                </div>
              {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% include 'footer.html.twig' %}
  </body>
</html>